<div class="container-md">
    <div class="col-md-8 offset-md-2">
        <div class="h5 text-center">Sign Up</div>
        <form autocomplete="off" action="/signup" method="post" class="needs-validation" novalidate>
            <div class="form-group">
                <label>Nombre:</label>
                <input class="form-control" required type="text" name="nombre"/>
            </div>
            <div class="form-group mt-3">
                <label>Direcci√≥n:</label>
                <input class="form-control" required type="text" name="direccion"/>
            </div>
            <div class="form-group mt-3">
                <label>Edad:</label>
                <input class="form-control" required type="text" name="edad"/>
            </div>
            <div class="form-group mt-3">
                <label>Tel:</label>
                <input class="form-control" required type="text" name="tel"/>
            </div>
            <div class="form-group mt-3">
                <label>Foto:</label>
                <input class="form-control" type="file" name="foto"/>
            </div>
            <div class="form-group mt-3">
                <label>Email:</label>
                <input class="form-control" required type="email" name="email"/>
            </div>    
            <div class="form-group mt-3">
                <label>Password:</label>
                <input class="form-control" required type="password" name="password"/>
            </div>
            <div class="form-group form-group mt-3">
                <input class="btn btn-primary" type="submit" value="Sign Up"/>
            </div>
            {{#if fail}}
            <div class="alert bg-danger">Lo sentimos, no podemos registrar el usuario.</div>
            {{/if}}
        </form>                  
    </div>          
</div>