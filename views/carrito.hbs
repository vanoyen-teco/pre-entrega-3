<div class="container-md">
    {{#if productos}}
    <div class="h4 mb-5 mt-3">Detalle de tu pedido:</div>
    <div>
        <div class="d-flex fw-bold pb-3">
            <div class="col">Producto</div>
            <div class="col-2">Cantidad</div>
            <div class="col-2">Precio</div>
            <div class="col-auto">Eliminar</div>
        </div>
        {{#each productos}}
        <div class="d-flex">
            <div class="col">{{this.titulo}}</div>
            <div class="col-2">{{this.cantidad}}</div>
            <div class="col-2">${{this.precio}}</div>
            <div class="col-auto d-flex aling-items-center">
                <a href="/cart/prod/decrease/{{this.id}}"><i class="bx bx-message-square-minus bx-sm ps-2"></i></a>
            </div>
            <div class="col-auto d-flex aling-items-center">
                <a href="/cart/add/{{this.id}}"><i class="bx bx-message-square-add bx-sm ps-2"></i></a>
            </div>
            <div class="col-auto d-flex aling-items-center">
                <a href="/cart/prod/remove/{{this.id}}"><i class="bx bx-message-square-x bx-sm ps-2"></i></a>
            </div>
        </div>
        {{/each}}
    </div>
    <form action="/cart/process" method="POST" class="needs-validation" novalidate>
        <div class="d-flex mt-5 flex-column">
            <div class="offset-md-8 col-md-4 mb-3">
                <label for="inputDireccion" class="form-label">Ingresa tu direcci√≥n:</label>
                <input type="text" class="form-control" id="inputDireccion" name="direccion" autocomplete="off" required>
            </div>
            <div class="offset-md-8 col-md-4">
                <button type="submit" class="btn btn-dark w-100">Finalizar la compra</button>
            </div>
        </div>
    </form>    
    {{else}}
    <div class="h5 text-center alert alert-secondary">No hay items en tu carrito</div>
    {{/if}}
</div>
{{#each scripts}}
    <script src="{{script}}"></script>
{{/each}}